{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".output/**", "dist/**"],
      "env": [
        "ENABLE_PLAYGROUND",
        "PORT",
        "HOST",
        "NODE_ENV",
        "DATABASE_URL",
        "DATABASE_LOGGING",
        "DATABASE_SSL",
        "BASE_DOMAIN",
        "TRUST_PROXY",
        "VITE_BLOG_API_URL",
        "VITE_BLOG_GRAPHQL_URL",
        "SESSION_SECRET",
        "OAUTH_GOOGLE_CLIENT_ID",
        "OAUTH_GOOGLE_CLIENT_SECRET",
        "OAUTH_GOOGLE_CALLBACK_URL",
        "BLOG_URL",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "AWS_S3_BUCKET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
